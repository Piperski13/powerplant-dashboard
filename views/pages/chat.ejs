<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Material Icons -->
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=account_circle,menu"
    />

    <link rel="icon" href="/assets/icons/favicon.png" type="image/svg+xml" />

    <!-- Local Styles -->
    <link rel="stylesheet" href="/styles/chat.css" />

    <title>Chat room page - <%= user.surname %></title>
  </head>

  <body>
    <div id="main-box">
      <%- include("../partials/navbar.ejs") %>
      <div id="chat-box">
        <h1 class="chat-title">Global Power Plant Chat</h1>
        <% if (messages.length>0) { %> <% messages.forEach(msg => { %>
            
        <div class="single-message"><span class="username"><%= msg.username %>:</span> <%= msg.message %> (<%= formatDate(msg.created_at) %>)</div>

        <% }) %> <% } else { %>
        <p>No messages.</p>
        <% } %>
      </div>
      <div class="test">
        <div class="send-msg-div">
            <input id="msgInput" placeholder="Send message" type="text" />
            <button
            id="btnSend"
            data-surname="<%= user.surname %>"
            data-id="<%= user.id %>"
            >
            Send
            </button>
        </div>
      </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script type="module" src="/scripts/websocket/chat.js"></script>
    <script src="/scripts/hamburger_menu/toggleMenu.js"></script>
  </body>
</html>
